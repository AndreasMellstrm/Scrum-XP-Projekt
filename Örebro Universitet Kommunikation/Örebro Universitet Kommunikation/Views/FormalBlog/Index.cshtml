@model Örebro_Universitet_Kommunikation.Models.FormalBlogViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">

    <div class="container">
        <h2 class="formal-blog-header"> Formell Blogg</h2>
        @Html.ActionLink("Nytt Inlägg", "CreateEntry", "FormalBlog")

    </div>

    @foreach (var item in Model.FormalBlogItems) {
        <div class="well">
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading">@item.Title</h4>

                    <p>@item.Content</p>
                    <ul class="list-inline list-unstyled">
                        <li><span><i class="glyphicon glyphicon-user"></i> @item.CreatorFirstName @item.CreatorLastName <i>(user@oru.se)</i> </span></li>
                        <li>|</li>
                        <li><span><i class="glyphicon glyphicon-calendar"></i> @item.Date</span></li>
                        <li>|</li>
                        <li><span><i class="glyphicon glyphicon-folder-open"></i> @item.Category </span></li>
                        <li>|</li>
                        <li><span><i class="glyphicon glyphicon-comment"></i>  @Html.ActionLink("Kommentarer", "ShowComments", "FormalBlog", new { BlogId = item.Id}, null)</span></li>
                        <li>|</li>
                        @if (item.AttachedFile != null)
                        {
                            <li><span><i class="glyphicon glyphicon-download-alt"></i></span><a href=""> Ladda ned fil </a></li>
                        }



                        @if (item.CanDelete)
                        {
                            <li>|</li>
                            <li> @Html.ActionLink("Ändra", "EditEntry", "FormalBlog", new { EntryId = item.Id, CreatorId = item.CreatorId }, null) </li>
                            <li>|</li>
                            <li> @Html.ActionLink("Ta bort", "DeleteEntry", "FormalBlog", new { EntryId = item.Id, CreatorId = item.CreatorId }, null) </li>
                        }


                    </ul>
                </div>
            </div>
        </div>
    }


</div>
