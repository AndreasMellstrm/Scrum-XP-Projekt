@model Örebro_Universitet_Kommunikation.Models.ChangeNotificationsViewModel
@{
    ViewBag.Title = "Change Notifications";
}

<h2>Anpassa notifikationer.</h2>

@using (Html.BeginForm("ChangeNotifications", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    <h4>Ändra notifikationsinställningar</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Notifikationer", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.RadioButtonFor(m => m.Notifications, "BlogEvent")&nbsp;@Html.Label("Blogginlägg & evenemang")
            @Html.RadioButtonFor(m => m.Notifications, "Blog")&nbsp;@Html.Label("Blogginlägg")
            @Html.RadioButtonFor(m => m.Notifications, "Event")&nbsp;@Html.Label("Evenemang")
            @Html.RadioButtonFor(m => m.Notifications, "None")&nbsp;@Html.Label("Inga notifikationer")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Spara ändringar" class="btn btn-primary" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}