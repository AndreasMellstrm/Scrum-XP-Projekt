@model Örebro_Universitet_Kommunikation.Models.ChangeNotificationsViewModel
@{
    ViewBag.Title = "Change Notifications";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeNotifications", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Ändra notifikationsinställningar</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Notifications, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.RadioButtonFor(m => m.Notifications, "EmailSms")&nbsp;@Html.Label("Email & SMS")
            @Html.RadioButtonFor(m => m.Notifications, "Email")&nbsp;@Html.Label("Email")
            @Html.RadioButtonFor(m => m.Notifications, "Sms")&nbsp;@Html.Label("SMS")
            @Html.RadioButtonFor(m => m.Notifications, "None")&nbsp;@Html.Label("Inga notifikationer")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change notifications" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}